\newcommand\minput[1]{%
  \input{#1}\unskip%
}

\NewDocumentCommand{\NewDRYer}{m +m}{%
  \withargs [\uniquecsname] [#2] {%
    \newenvironment{#1}{%
      \begingroup%
      \@tempswafalse\filec@ntents{##1.tmp}%
    }{%
      \endfilecontents%
      \endgroup%
    }%
